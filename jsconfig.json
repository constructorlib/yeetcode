{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "assets": ["./src/assets/*"],
      "components": ["./src/components/*"],
      "exp": ["src/exp/*"],
      "pages": ["./src/pages/*"],
      "styles": ["./src/styles/*"],
      "utils": ["./src/utils/*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
